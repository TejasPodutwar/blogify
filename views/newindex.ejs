        </nav>
    </div>
    
    <div class="homepage-title">
        <span>Blogs</span>
    </div>
    
    <div class="all-blogs create-content">
        <% if(blogs.length > 0) { %>
            <% blogs.forEach( blog => { %>
                <div class="blog-detail">
                    <h3 class="blog-title"><%= blog.title %></h3>
                    <a class="view-btn" href="/blogs/<%= blog._id %>">Read More</a>
                </div>
            <% }) %>
        <% } else { %>
            <h3>No data available...</h3>
        <% } %> 
    </div>
</body>
</html>